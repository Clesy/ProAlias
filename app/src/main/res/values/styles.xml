<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="mainnotitle" parent="AppTheme">
        <item name="android:textColor">@color/darkdark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/darkdark</item>
        <item name="colorPrimaryDark">@color/darkdark</item>
        <item name="colorAccent">@color/darkdark</item>
    </style>
    <style name="generalnotitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="withDarkMenu" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">#1e8dc1</item>
        <item name="colorPrimary">#1e8dc1</item>

    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="MenuActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#1e8dc1</item>
        <item name="colorPrimaryDark">#1e8dc1</item>
        <item name="colorAccent">#1e8dc1</item>
    </style>
    <style name="ScoreActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#34D0AB</item>
        <item name="colorPrimaryDark">#34D0AB</item>
        <item name="colorAccent">#34D0AB</item>
    </style>

</resources>
